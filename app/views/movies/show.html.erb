<h1><%=@movie.title %></h1>
<p><%=@movie.creation_year %></p>
<p><%=@movie.genre %></p>
<p><%=@movie.title %></p>

<%@movie.actors.young_to_old.each_with_index do |actor| %></p>
  <p><%=actor.name%></p>
<% end  %>
<p><%="Average Age of Actors: #{@movie.actors.average_actor_age.to_i }"%></p>

<%= form_tag "/studios/#{@movie.id}" do %>
<%= label_tag "Add Actor to this Movie:" %>
<%= text_field_tag :actor_name %>
<%= submit_tag "Submit" %>
<% end  %>
